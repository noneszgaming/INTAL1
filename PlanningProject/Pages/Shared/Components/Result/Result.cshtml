@model ResultViewModel

<div class="w-[500px] p-6 rounded-2xl bg-gray-100 flex flex-col">
    <h1 class="text-2xl font-bold text-purple-600 mb-4 text-center">Tasks</h1>
    
    <div class="space-y-2">
        @foreach (var result in Model.Result)
        {
            <div class="w-full p-3 rounded-xl bg-gray-200 flex justify-between items-center">
                <span class="text-lg font-medium text-gray-800">@result.Name</span>
                <div class="flex items-center">
                    <span class="text-gray-600 mr-1">Avg:</span>
                    <span class="font-medium text-gray-800">@result.Average</span>
                </div>
            </div>
        }
    </div>

    @if (Model.ShowOkButton)
    {
        <button class="mt-4 px-6 py-2 mx-auto rounded-lg bg-purple-500 text-white font-medium hover:bg-purple-600">
            OK
        </button>
    }
</div>
