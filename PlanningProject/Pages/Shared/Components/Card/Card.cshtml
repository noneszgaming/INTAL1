@model CardViewModel

<div class="w-24 h-40 rounded-[15px] flex items-center justify-center 
    @(Model.isVoted ? "bg-cstm-purple" : "bg-gray-400")
    @(Model.isRevealed && !Model.isSelected ? "bg-transparent border-4 border-cstm-purple" : "")
    @(!Model.isVoted && Model.isRevealed && Model.isSelected ? "bg-cstm-purple" : "")
">
    @if (Model.isRevealed)
    {
        <p class="text-2xl font-bold text-cstm-purple @(Model.isSelected ? "text-white" : "")">6</p>
    }

</div>