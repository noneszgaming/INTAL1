@model CardViewModel

<div data-clickable="@Model.inDeck.ToString().ToLower()"
    onclick="if(this.dataset.clickable === 'true') handleClick(this)" class="card w-[60px] h-[90px] rounded-[15px] flex items-center justify-center duration-500 
        @(Model.inDeck ? "cursor-pointer" : "")
        @(Model.inDeck && Model.isRevealed ? "hover:-translate-y-4 bg-transparent border-[3px] border-cstm-purple" :
            Model.isRevealed ? "bg-transparent border-[3px] border-cstm-purple" : 
            Model.isVoted ? "bg-cstm-purple" : "bg-gray-300")">
    @if (Model.isRevealed)
    {
        <p class="text-xl font-bold text-cstm-purple select-none">@Model.value</p>
    }
</div>