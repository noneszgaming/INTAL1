@page "/Login"
@model PlanningProject.Pages.Login.LoginModel

<!DOCTYPE html>
<html>

<head>
    <title>Planning Poker</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="w-full h-screen flex bg-gradient-to-br from-70% from-slate-100 to-cstm-purple">
        <div class="w-full h-[80%] flex flex-col justify-evenly items-center">
            <div class="w-full flex justify-center items-center gap-4">
                @await Component.InvokeAsync("Title")
                <span class="inline-block w-[4px] h-14 bg-cstm-purple"></span>
                <p class="text-2xl text-purple-600 font-semibold px-4 select-none">Planning doesn't have to be boring.
                </p>
            </div>

            <p class="text-[20px] font-semibold text-gray-500 select-none">Please enter a Username so you can play with
                us.
            </p>

            <form id="loginForm" method="post" class="w-[380px] flex flex-col gap-4 items-center" onsubmit="handleSubmit(event)">
                <div class="w-full flex flex-col items-center">
                    <div class="w-[96%] flex justify-start">
                        <p class="text-xl text-cstm-purple font-semibold select-none">Username</p>
                    </div>
                    <input type="text"
                        class="w-full h-12 px-4 border-[3px] bg-slate-100 border-cstm-purple rounded-[12px] text-cstm-purple text-lg font-semibold outline-none selection:bg-cstm-purple selection:text-white caret-cstm-purple"
                        id="usernameInput" placeholder="" asp-for="Username">
                </div>
                <button type="submit"
                        class="w-[250px] py-3 px-4 text-lg font-semibold text-white bg-purple-600 rounded-xl  hover:bg-purple-700 transition duration-700 disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:bg-purple-600 select-none shadow-none hover:shadow-[0_0_36px_rgba(155,0,244,0.7)]">
                    SUBMIT
                </button>
            </form>
        </div>


    </div>


    <script>
        function handleSubmit(event) {
            const username = document.getElementById('usernameInput').value.trim();

            if (username) {
                alert('Üdvözlöm, ${ username }! Sikeresen helyet foglalt a Planning Poker asztalnál.');
            } else {
                alert('A felhasználónév mező nem lehet üres. Kérem írjon be egy érvényes felhasználónevet.');
            }
        }
    </script>
</body>

</html>
