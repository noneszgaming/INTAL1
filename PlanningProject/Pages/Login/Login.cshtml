@page
@model PlanningProject.Pages.Login.LoginModel

<!DOCTYPE html>
<html>
<head>
    <title>Planning Poker Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: linear-gradient(135deg, #ffffff 0%, #e6e6fa 100%);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            max-width: 800px;
            padding: 40px;
            text-align: center;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
        }

        .title {
            font-size: 48px;
            font-weight: bold;
            color: #9400d3;
            margin: 0;
        }

        .subtitle {
            font-size: 24px;
            color: #9400d3;
            margin: 0;
        }

        .separator {
            font-size: 48px;
            color: #9400d3;
            margin: 0 10px;
        }

        .form-group {
            margin: 40px 0;
        }

        .form-label {
            display: block;
            color: #666;
            font-size: 18px;
            margin-bottom: 30px;
        }

        .username-label {
            color: #9400d3;
            font-size: 16px;
            margin-bottom: 10px;
            display: block;
        }

        .form-input {
            width: 100%;
            max-width: 400px;
            padding: 12px;
            border: 2px solid #9400d3;
            border-radius: 8px;
            font-size: 16px;
            margin: 0 auto;
        }

        .submit-button {
            background-color: #9400d3;
            color: white;
            border: none;
            padding: 12px 40px;
            border-radius: 25px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: all 0.3s ease;
            box-shadow: 0 0 20px rgba(148, 0, 211, 0.3);
        }

        .submit-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 30px rgba(148, 0, 211, 0.5);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 class="title">Planning Poker</h1>
            <span class="separator">|</span>
            <p class="subtitle">Planning doesn't have to be boring.</p>
        </div>

        /* Form elem eseménykezelővel
        Form csoport a beviteli mezőnek
        Submit gomb */        
        <form id="loginForm" onsubmit="handleSubmit(event)">
            <div class="form-group" >
                <label class="form-label">Please enter a Username so you can play with us.</label>
                <label class="username-label">Username</label>
                <input type="text" class="form-input" id="usernameInput" placeholder="">
            </div>

            <button type="submit" class="submit-button">SUBMIT</button>
        </form>
    </div>

    /* Form beküldés kezelő függvény 
    Megakadályozza az alapértelmezett form beküldést*/     
    <script>
        function handleSubmit(event) {
            event.preventDefault();
            const username = document.getElementById('usernameInput').value.trim();
            
            if (username) {
                alert(`Üdvözlöm, ${username}! Sikeresen helyet foglalt a Planning Poker asztalnál.`);
            } else {
                alert('A felhasználónév mező nem lehet üres. Kérem írjon be egy érvényes felhasználónevet.');
            }
        }
    </script>
</body>
</html>

